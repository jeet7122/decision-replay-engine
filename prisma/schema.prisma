generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Decision {
  id         String      @id @default(cuid())
  title      String
  context    String
  options    Json
  chosen     String
  confidence Int
  reasoning  String?
  createdAt  DateTime    @default(now())
  User       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  outcome    Outcome[]
  aiReplays  AI_Replay[]

  @@map("decisions")
  @@index([userId])
}

model User {
  id        String     @id
  decisions Decision[]
  createdAt DateTime   @default(now())

  @@map("users")
}

model Outcome {
  id          String      @id @default(cuid())
  decisionId  String
  type        OutcomeType
  description String
  timeCost    Int?
  lesson      String?
  createdAt   DateTime    @default(now())

  decision Decision @relation(fields: [decisionId], references: [id], onDelete: Cascade)

  @@index([decisionId])
  @@map("outcomes")
}
model AI_Replay {
  id          String   @id @default(cuid())
  decisionId  String
  analysis    String
  generatedAt DateTime @default(now())
  decision    Decision @relation(fields: [decisionId], references: [id], onDelete: Cascade)

  @@index([decisionId])
  @@map("ai_replays")
}
enum OutcomeType {
  positive
  neutral
  negative
}
